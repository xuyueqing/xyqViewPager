<?xml version="1.0" encoding="utf-8"?>
<com.example.xuyueqing.xyqviewpager.xyqviewpager.XyqViewPagerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weixin_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.xuyueqing.xyqviewpager.xyqviewpager.XyqViewPager
        android:id="@+id/my_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/my_view_pager"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true">

        <com.example.xuyueqing.xyqviewpager.xyqviewpager.XyqDotListView
            android:id="@+id/my_dot_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />


        <com.example.xuyueqing.xyqviewpager.xyqviewpager.XyqTouchDotView
            android:id="@+id/touch_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/circle_black"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</com.example.xuyueqing.xyqviewpager.xyqviewpager.XyqViewPagerView>